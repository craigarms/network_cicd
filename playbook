---
- hosts: r1
  gather_facts: false
  name: Configure R1
  
  tasks:
    - include_vars: Configs/r1.yml
    
    - debug: 
      var: vars
    
    - name: Configure description and status
      cisco.ios.ios_interfaces:
        config:
          - name: "{{ item.name }}"
            description: "{{ item.description }}"
            enabled: "{{ item.activate }}"
      loop: "{{ interfaces }}"