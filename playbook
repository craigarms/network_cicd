---
hosts: r1
gather_facts: false
name: Configure R1
ansible_connection: ansible.netcommon.network_cli
ansible_username: craig
ansible_password: cisco

tasks:
  - include_vars: Configs/r1.yml
  
  - debug: vars
  
  - name: Configure description and status
    cisco.ios.ios_interfaces:
      config:
        - name: {{ item.name }}
          description: {{ item.description }}
          enabled: {{ item.activate }}
    loop: {{ interfaces }}